<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="il.cshaifasweng.OCSFMediatorExample.client.PrimaryController"
      alignment="CENTER" spacing="20">

   <padding>
      <Insets top="20" right="20" bottom="20" left="20"/>
   </padding>

   <Text fx:id="statusTextBox" text="Your turn!" style="-fx-font-size: 16px;" />

   <GridPane fx:id="grid"
             alignment="CENTER"
             hgap="10" vgap="10">

      <padding>
         <Insets top="20" right="20" bottom="20" left="20"/>
      </padding>

      <!-- Row 0 -->
      <Button fx:id="bt00" text="" GridPane.rowIndex="0" GridPane.columnIndex="0" prefWidth="80" prefHeight="80"/>
      <Button fx:id="bt01" text="" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="80" prefHeight="80"/>
      <Button fx:id="bt02" text="" GridPane.rowIndex="0" GridPane.columnIndex="2" prefWidth="80" prefHeight="80"/>

      <!-- Row 1 -->
      <Button fx:id="bt10" text="" GridPane.rowIndex="1" GridPane.columnIndex="0" prefWidth="80" prefHeight="80"/>
      <Button fx:id="bt11" text="" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="80" prefHeight="80"/>
      <Button fx:id="bt12" text="" GridPane.rowIndex="1" GridPane.columnIndex="2" prefWidth="80" prefHeight="80"/>

      <!-- Row 2 -->
      <Button fx:id="bt20" text="" GridPane.rowIndex="2" GridPane.columnIndex="0" prefWidth="80" prefHeight="80"/>
      <Button fx:id="bt21" text="" GridPane.rowIndex="2" GridPane.columnIndex="1" prefWidth="80" prefHeight="80"/>
      <Button fx:id="bt22" text="" GridPane.rowIndex="2" GridPane.columnIndex="2" prefWidth="80" prefHeight="80"/>

   </GridPane>

</VBox>
